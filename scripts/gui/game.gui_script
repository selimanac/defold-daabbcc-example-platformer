local data             = require("scripts.lib.data")
local const            = require("scripts.lib.const")

local restart_btn_node = nil
local pause_btn_node   = nil
local pause_btn_node1  = nil
function init(self)
	msg.post(".", "acquire_input_focus")
	restart_btn_node = gui.get_node("restart_btn")
	pause_btn_node = gui.get_node("pause_btn")
	pause_btn_node1 = gui.get_node("pause_btn1")
end

