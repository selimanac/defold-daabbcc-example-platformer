function on_input(self, action_id, action)
	if action_id == const.TRIGGERS.MOUSE_BUTTON_LEFT and action.pressed then
		if gui.pick_node(restart_btn_node, action.x, action.y) then
			data.game.state.input_pause = true
			data.game.state.skip_colliders = true

			msg.post(const.URLS.GAME, const.MSG.RESTART)
		elseif gui.pick_node(pause_btn_node, action.x, action.y) then
			data.toggle_game_pause(false)
		elseif gui.pick_node(pause_btn_node1, action.x, action.y) then
			data.toggle_game_pause(true)
		end
	end
end

